    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', sans-serif;
    background: linear-gradient(135deg, var(--dark), #1a1f35);
    color: var(--light);
    min-height: 100vh;
    overflow-x: hidden;
}

/* Neon text effect */
.neon-text {
    text-shadow: 0 0 5px var(--primary),
                 0 0 10px var(--primary),
                 0 0 20px var(--primary);
    animation: neonPulse 2s infinite;
}

@keyframes neonPulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
}

/* Enhanced Hero Section */
.gadgets-hero {
    position: relative;
    min-height: 60vh;
    padding: 4rem 2rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)),
                url('https://img.freepik.com/premium-photo/flat-lay-black-gadgets-electronics-black-background_14117-672123.jpg');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    overflow: hidden;
}

.gadgets-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, transparent 40%, rgba(0, 255, 140, 0.1) 45%, transparent 50%);
    animation: scanLine 3s linear infinite;
}

@keyframes scanLine {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
}

.gadgets-hero h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    opacity: 0;
    transform: translateY(-50px);
    animation: fadeInDown 1s forwards;
}

.gadgets-hero p {
    font-size: 1.2rem;
    opacity: 0;
    transform: translateY(50px);
    animation: fadeInUp 1s forwards 0.5s;
}

/* Glass morphism category tabs */
.category-tabs {
    max-width: 1200px;
    margin: 2rem auto;
    padding: 2rem;
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
    background: var(--glass);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.category-tab {
    padding: 1rem 2rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
}

.category-tab::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.2),
        transparent
    );
    transition: 0.5s;
}

.category-tab:hover::before {
    left: 100%;
}

.category-tab:hover,
.category-tab.active {
    background: var(--primary);
    color: var(--dark);
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 255, 140, 0.3);
}

/* Enhanced Featured Gadget Section */
.featured-gadget {
    max-width: 1200px;
    margin: 3rem auto;
    padding: 2rem;
    background: var(--glass);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    transform: translateY(20px);
    opacity: 0;
    animation: fadeInUp 1s forwards;
}

.gadget-image {
    position: relative;
    overflow: hidden;
    border-radius: 15px;
    transition: transform 0.3s ease;
}

.gadget-image:hover {
    transform: scale(1.02);
}

.gadget-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.gadget-image:hover img {
    transform: scale(1.1);
}

.rating-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--primary);
    color: var(--dark);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: bold;
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
}

.search-container {
    position: absolute;
    top: 1rem;
    left: 1rem;
    display: flex;
    align-items: center;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 0.5rem;
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.search-container input {
